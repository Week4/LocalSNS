<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom Shadow -->
    <item>

        <shape android:shape="rectangle">
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:left="1dp" />
            <solid android:color="#EEEEEE" />
        </shape>
    </item>

    <!-- White Top color -->
	<item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>